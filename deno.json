{
  "tasks": {
    "dev": "deno run --allow-read src/main.ts",
    "dev:watch": "deno run --allow-read --watch src/main.ts"
  },
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "always",
    "semiColons": true,
    "singleQuote": false,
    "useTabs": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "acorn": "npm:acorn@8.14.0",
    "acorn-bigint": "npm:acorn-bigint@1.0.0",
    "acorn-walk": "npm:acorn-walk@8.3.4",
    "esprima": "npm:esprima@4.0.1"
  }
}
